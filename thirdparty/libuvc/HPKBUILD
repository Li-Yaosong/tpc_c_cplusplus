pkgname=libuvc
pkgver=0.0.7
pkgrel=0
pkgdesc="A cross-platform library for USB video devices"
url="https://github.com/libuvc/libuvc"
archs=("armeabi-v7a" "arm64-v8a")
license=("BSD")
depends=("libusb" "opencv")
makedepends=()

source="https://github.com/libuvc/libuvc/archive/refs/tags/v$pkgver.tar.gz"

autounpack=true
downloadpackage=true
buildtools="cmake"
patchflag=true
builddir="$pkgname-$pkgver"
packagename="v$pkgver.tar.gz"


prepare() {
    if $patchflag
    then
        # 将测试程序 uvc_test 从 “纯 C 编译” 改为 “用 C++ 编译器编译”
        patch -p1 < libuvc.patch
        patchflag=false
    fi
    
    cd "$builddir"
    mkdir -p "$ARCH-build"
    cd "$OLDPWD"
}

build() {
    cd "$builddir"

    local libusb_prefix="${LYCIUM_ROOT}/usr/libusb/$ARCH"
    local libusb_include_dir="${libusb_prefix}/include/libusb-1.0"
    local libusb_lib_dir="${libusb_prefix}/lib"
    local opencv_prefix="${LYCIUM_ROOT}/usr/opencv/$ARCH"
    local opencv_config_dir="${opencv_prefix}/lib/cmake/opencv4"
    local opencv_include_dir="${opencv_prefix}/include/opencv4"
    local opencv_lib_dir="${opencv_prefix}/lib"

    if [ ! -f "${libusb_include_dir}/libusb.h" ] || [ ! -f "${libusb_lib_dir}/libusb-1.0.so" ]; then
        echo "ERROR: libusb files missing at ${libusb_prefix}"
        cd "$OLDPWD"
        return 1
    fi

    if [ ! -f "${opencv_config_dir}/OpenCVConfig.cmake" ] || [ ! -f "${opencv_lib_dir}/libopencv_core.so" ]; then
        echo "ERROR: OpenCV files missing at ${opencv_prefix}"
        cd "$OLDPWD"
        return 1
    fi

    export PKG_CONFIG_PATH="${libusb_prefix}/lib/pkgconfig:${opencv_prefix}/lib/pkgconfig:${PKG_CONFIG_PATH}"

    ${OHOS_SDK}/native/build-tools/cmake/bin/cmake "$@" \
        -DOHOS_ARCH="$ARCH" \
        -DOpenCV_DIR="${opencv_config_dir}" \
        -DOpenCV_INCLUDE_DIRS="${opencv_include_dir}" \
        -DCMAKE_FIND_ROOT_PATH="${libusb_prefix};${opencv_prefix}" \
        -DBUILD_SHARED_LIBS=ON \
        -DBUILD_TEST=ON \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_C_FLAGS="-I${libusb_include_dir} -I${opencv_include_dir}" \
        -DCMAKE_CXX_FLAGS="-I${libusb_include_dir} -I${opencv_include_dir} -std=c++11" \
        -DCMAKE_SHARED_LINKER_FLAGS="-L${libusb_lib_dir} -L${opencv_lib_dir} -lusb-1.0 -lopencv_core -lopencv_highgui -Wl,-rpath,${libusb_lib_dir}:${opencv_lib_dir}" \
        -DCMAKE_EXE_LINKER_FLAGS="-L${libusb_lib_dir} -L${opencv_lib_dir} -lusb-1.0 -lopencv_core -lopencv_highgui -Wl,-rpath,${libusb_lib_dir}:${opencv_lib_dir}" \
        -B"$ARCH-build" \
        -S./
    
    if [ $? -ne 0 ]; then
        echo "CMake configuration failed!"
        cd "$OLDPWD"
        return 1
    fi

    make -C "$ARCH-build" VERBOSE=1 -j$(nproc)
    local ret=$?

    cd "$OLDPWD"
    return $ret
}

package() {
    if [ ! -d "$builddir" ]; then
        echo "ERROR: Source directory $builddir does not exist!"
        return 1
    fi
    cd "$builddir"
    make -C "$ARCH-build" install
    cd "$OLDPWD"
}

check() {
    echo "The test must be on an OpenHarmony device!"
}

cleanbuild() {
    if [ -d "$builddir" ]; then
        cd "$builddir"
        for arch in "${archs[@]}"; do
            rm -rf "$arch-build"
        done
        cd "$OLDPWD"
    fi
}