pkgname=STLport
pkgver=5.2.1
pkgrel=0
pkgdesc="STLport is a full ANSI C++ Standard library."
url="https://github.com/frida/stlport" 
archs=("armeabi-v7a" "arm64-v8a")
license=()
depends=() 
makedepends=()
source="https://sourceforge.net/projects/stlport/files/STLport/STLport-5.2.1/STLport-5.2.1.tar.gz"

downloadpackage=true
autounpack=true 
buildtools="configure"  

builddir=$pkgname-$pkgver
packagename=$builddir.tar.gz
cloneflag=true

# 此三方库原库编译需要依赖gcc-5.4.6版本过低，但OH工具链提供的版本较高，无法编译，故此脚本不进行编译，只需要下载需要移植的源码即可。
prepare() {
    cd $builddir
    cd $OLDPWD
}

build() {
    cd $builddir
    ret=$?
    cd $OLDPWD
    return $ret
}

package() {
    cd $builddir
    cd $OLDPWD
}

check() {
    echo "The test must be on an OpenHarmony device!"
}

cleanbuild(){
    rm -rf ${PWD}/$builddir #${PWD}/$packageName
}