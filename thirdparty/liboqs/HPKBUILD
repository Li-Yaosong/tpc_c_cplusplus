pkgname=liboqs
pkgver=0.14.0
pkgrel=0
pkgdesc="Open Quantum Safe (OQS) library providing quantum-resistant cryptographic algorithms"
url="https://github.com/open-quantum-safe/liboqs"

archs=("armeabi-v7a" "arm64-v8a")
license=("MIT")
depends=("openssl")
makedepends=()

source="https://github.com/open-quantum-safe/liboqs/archive/refs/tags/$pkgver.tar.gz"

downloadpackage=true
autounpack=true
buildtools="cmake"

builddir=$pkgname-$pkgver
packagename=$builddir.tar.gz

srcdir=${PWD}
pkgdir=${PWD}/pkg

prepare() {
    mkdir -p "${srcdir}"
    
    if [ ! -f "${srcdir}/${packagename}" ]; then
        echo "Downloading ${packagename}"
        wget -O "${srcdir}/${packagename}" "${source}"
    fi
    
    if [ ! -d "${builddir}" ]; then
        echo "Unpacking ${packagename}"
        tar -xzf "${srcdir}/${packagename}"
    fi
    
    if [ ! -d "${builddir}" ]; then
        echo "Error: Build directory ${builddir} does not exist after unpacking!"
        return 1
    fi
    
    cd "${builddir}"

    mkdir -p "${ARCH}-build"
    cd "${OLDPWD}"
}

build() {
    if [ ! -d "${builddir}" ]; then
        echo "Error: Build directory ${builddir} does not exist!"
        return 1
    fi
    
    cd "${builddir}"
    
    OPENSSL_ROOT="${LYCIUM_ROOT}/usr/openssl/${ARCH}"
    OPENSSL_INCLUDE="${OPENSSL_ROOT}/include"
    OPENSSL_CRYPTO="${OPENSSL_ROOT}/lib/libcrypto.a"
    
    if [ ! -d "${OPENSSL_ROOT}" ]; then
        echo "Error: OpenSSL root directory ${OPENSSL_ROOT} does not exist!"
        echo "Please build openssl first: ./build.sh openssl"
        return 1
    fi
    
    if [ ! -f "${OPENSSL_CRYPTO}" ]; then
        echo "Error: OpenSSL crypto library ${OPENSSL_CRYPTO} does not exist!"
        return 1
    fi
    
    case "${ARCH}" in
        "armeabi-v7a")
            CMAKE_SYSTEM_PROCESSOR="arm"
            ;;
        "arm64-v8a")
            CMAKE_SYSTEM_PROCESSOR="aarch64"
            ;;
        "x86_64")
            CMAKE_SYSTEM_PROCESSOR="x86_64"
            ;;
        *)
            CMAKE_SYSTEM_PROCESSOR="arm"
            ;;
    esac
    
    ${OHOS_SDK}/native/build-tools/cmake/bin/cmake  "$@"\
        -DOHOS_ARCH="${ARCH}" \
        -DCMAKE_BUILD_TYPE=Release \
        -DOQS_PERMIT_UNSUPPORTED_ARCHITECTURE=ON \
        -DCMAKE_SYSTEM_PROCESSOR="${CMAKE_SYSTEM_PROCESSOR}" \
        -DOQS_USE_OPENSSL=ON \
        -DOQS_ENABLE_SIG_STFL_LMS=ON \
        -DOQS_ENABLE_SIG_STFL_XMSS=ON \
        -DOQS_HAZARDOUS_EXPERIMENTAL_ENABLE_SIG_STFL_KEY_SIG_GEN=ON \
        -DOPENSSL_ROOT_DIR="${OPENSSL_ROOT}" \
        -DOPENSSL_INCLUDE_DIR="${OPENSSL_INCLUDE}" \
        -DOPENSSL_CRYPTO_LIBRARY="${OPENSSL_CRYPTO}" \
        -DCMAKE_FIND_ROOT_PATH="${OPENSSL_ROOT}" \
        -B"${ARCH}-build" \
        -DBUILD_TESTING=ON \
        -S./
    
    if [ $? -ne 0 ]; then
        echo "CMake configuration failed!"
        return 1
    fi
    
    echo "Building for ${ARCH}..."
    make -C "${ARCH}-build" VERBOSE=1 -j$(nproc)
    
    ret=$?
    cd "${OLDPWD}"
    return $ret
}

package() {
    if [ ! -d "${builddir}" ]; then
        echo "Error: Build directory ${builddir} does not exist!"
        return 1
    fi
    
    cd "${builddir}"
    make -C "${ARCH}-build" install
    cd "${OLDPWD}"
}

check() {
    echo "The test must be on an OpenHarmony device!"
}

cleanbuild() {
    if [ -d "${builddir}" ]; then
        cd "${builddir}"
        for arch in "${archs[@]}"; do
            rm -rf "${arch}-build"
        done
        cd "${OLDPWD}"
    fi
}