pkgname=irods
pkgver=4.3.2
pkgrel=0
pkgdesc="iRODS is an open source data management system designed to provide high performance, scalable and secure data storage and access."
url="https://github.com/irods/irods"
archs=("armeabi-v7a" "arm64-v8a")
license=("BSD Licensed")
depends=("avrocpp" "boost" "libzmq" "Catch2" "cppzmq" "fmt-8.1.1" "json" "spdlog" "libarchive" "openssl" "curl" "nanodbc" "unixODBC" "linux-pam")
makedepends=()
install=
source="https://github.com/$pkgname/$pkgname/archive/refs/tags/$pkgver.tar.gz"

downloadpackage=true
autounpack=true
oneceflag=true
buildtools="cmake"
builddir=$pkgname-${pkgver}
packagename=$builddir.tar.gz

prepare() {
    rm -rf /opt/irods-externals
    mkdir -p $builddir/$ARCH-build
    mkdir -p /opt/irods-externals/avro1.11.0-3/lib /opt/irods-externals/avro1.11.0-3/include /opt/irods-externals/avro1.11.0-3/bin \
        /opt/irods-externals/boost1.81.0-1 /opt/irods-externals/catch22.13.8-0 \
        /opt/irods-externals/cppzmq4.8.1-1 /opt/irods-externals/fmt8.1.1-1 /opt/irods-externals/json3.10.4-0 \
        /opt/irods-externals/zeromq4-14.1.8-1  /opt/irods-externals/spdlog1.9.2-2 /opt/irods-externals/nanodbc2.13.0-2 \
        /opt/irods-externals/libarchive3.5.2-0 /opt/irods-externals/flex/include/gssapi/ \
        /opt/irods-externals/impl/impl/json/ /opt/irods-externals/impl/api/ /opt/irods-externals/clang13.0.1-0
        
    ln -s /data/tpc_c_cplusplus/lycium/usr/avrocpp/${ARCH}/include/* /opt/irods-externals/avro1.11.0-3/include
    ln -s /data/tpc_c_cplusplus/lycium/usr/avrocpp/${ARCH}/lib/* /opt/irods-externals/avro1.11.0-3/lib
    ln -s /data/tpc_c_cplusplus/thirdparty/avrocpp/avro-release-1.11.1/host-build/avrogencpp /opt/irods-externals/avro1.11.0-3/bin/avrogencpp
    ln -s /data/tpc_c_cplusplus/lycium/usr/boost/${ARCH}/* /opt/irods-externals/boost1.81.0-1
    ln -s /data/tpc_c_cplusplus/lycium/usr/Catch2/${ARCH}/* /opt/irods-externals/catch22.13.8-0
    ln -s /data/tpc_c_cplusplus/lycium/usr/cppzmq/${ARCH}/* /opt/irods-externals/cppzmq4.8.1-1
    ln -s /data/tpc_c_cplusplus/lycium/usr/fmt-8.1.1/${ARCH}/* /opt/irods-externals/fmt8.1.1-1
    ln -s /data/tpc_c_cplusplus/lycium/usr/json/${ARCH}/* /opt/irods-externals/json3.10.4-0
    ln -s /data/tpc_c_cplusplus/lycium/usr/libzmq/${ARCH}/* /opt/irods-externals/zeromq4-14.1.8-1
    ln -s /data/tpc_c_cplusplus/lycium/usr/spdlog/${ARCH}/* /opt/irods-externals/spdlog1.9.2-2
    ln -s /data/tpc_c_cplusplus/lycium/usr/nanodbc/${ARCH}/* /opt/irods-externals/nanodbc2.13.0-2
    ln -s /data/tpc_c_cplusplus/lycium/usr/libarchive/${ARCH}/* /opt/irods-externals/libarchive3.5.2-0
    
    ln -s /usr/include/FlexLexer.h /opt/irods-externals/flex/include/FlexLexer.h
    ln -s /usr/include/gssapi.h /opt/irods-externals/flex/include/gssapi.h
    ln -s /usr/include/gssapi/* /opt/irods-externals/flex/include/gssapi/
    ln -s /data/tpc_c_cplusplus/thirdparty/avrocpp/avro-release-1.11.1/lang/c++/impl/json/*  /opt/irods-externals/impl/impl/json/
    ln -s /data/tpc_c_cplusplus/thirdparty/avrocpp/avro-release-1.11.1/lang/c++/api/*  /opt/irods-externals/impl/api/

    if $onceflag
    then
        cd $builddir
        # 打patch处理交叉编译问题
        patch -p1 < `pwd`/../irods_oh_pkg.patch >> $publicbuildlog 2>&1
        # 修改依赖boost库为.a依赖
        grep -rl "/lib/libboost" ./ | xargs -I {}  sed -i 's|\(/lib/libboost_[^.]*\)\.so$|\1.a|g' {}
        grep -rl "/lib/libboost" ./ | xargs -I {}  sed -i 's|\(/lib/libboost_[^.]*\)\.so"$|\1.a"|g' {}
        grep -rl "/lib/libboost" ./ | xargs -I {}  sed -i 's|\(/lib/libboost_[^.]*\)\.so)$|\1.a)|g' {}
        
        # IDE不支持修订版本号
        sed -i 's/set(IRODS_VERSION "${IRODS_VERSION_MAJOR}.${IRODS_VERSION_MINOR}.${IRODS_VERSION_PATCH}")/set(IRODS_VERSION "${IRODS_VERSION_MAJOR}")/' ./CMakeLists.txt
        sed -i 's/set(PACKAGE_VERSION "${IRODS_VERSION_1}.${IRODS_VERSION_2}.${IRODS_VERSION_3}")/set(PACKAGE_VERSION "${IRODS_VERSION_1}")/' ./cmake/IRODSConfigVersion.cmake.in
        
        onceflag=false
        cd $OLDPWD
    fi
}

build() {
    cd $builddir
    ${OHOS_SDK}/native/build-tools/cmake/bin/cmake "$@" \
        -DOHOS_ARCH=$ARCH -DIRODS_BUILD_AGAINST_LIBCXX=OFF \
        -DIRODS_DISABLE_COMPILER_OPTIMIZATIONS=ON -DIRODS_UNIT_TESTS_BUILD=ON \
        -Dfmt_DIR=/data/tpc_c_cplusplus/lycium/usr/linux-pam/$ARCH/include \
        -DCMAKE_CXX_FLAGS="-I/data/tpc_c_cplusplus/lycium/usr/linux-pam/$ARCH/include \
        -I/data/tpc_c_cplusplus/lycium/usr/openssl/$ARCH/include \
        -I/data/tpc_c_cplusplus/lycium/usr/curl/$ARCH/include \
        -I/data/tpc_c_cplusplus/lycium/usr/unixODBC/$ARCH/include \
        -I/opt/irods-externals/flex/include \
        -I/opt/irods-externals/impl/impl \
        -I/opt/irods-externals/impl/api/ \
        -UIRODS_ENABLE_SYSLOG \
        -DIRODS_BUILD_WITH_WERROR=OFF \
        -Dsolaris_platform \
        -Wno-c++11-narrowing \
        -Wunused-command-line-argument \
        -Wno-error=unused-command-line-argument" -B$ARCH-build -S./ -L >  $buildlog 2>&1
    
    $MAKE VERBOSE=1 -C $ARCH-build >> $buildlog 2>&1
    ret=$?
    cd $OLDPWD
    return $ret
}

package() {
    cd $builddir
    make -C $ARCH-build install >>  $buildlog 2>&1
    cd $OLDPWD
}

check() {
    echo "The test must be on an OpenHarmony device!"
    cd $builddir/$ARCH-build
    # 屏蔽用例（依赖服务器环境，手动执行）
    patterns_to_delete=(  
        "file_object"  
        "replica_access_table"  
        "replica_state_table"  
        "atomic_apply_acl_operations"  
        "atomic_apply_metadata_operations"  
        "client_connection"  
        "connection_pool"  
        "data_object_finalize"  
        "data_object_modify_info"
        "dstream"
        "filesystem"
        "get_delay_rule_info"
        "get_file_descriptor_info"
        "get_resource_info_for_operation"
        "json_apis_from_client"
        "logical_locking"
        "logical_paths_and_special_characters"
        "metadata"
        "parallel_transfer_engine"
        "query_builder"
        "rcTicketAdmin"
        "rc_check_auth_credentials"
        "rc_data_obj"
        "rc_genquery2"
        "rc_get_library_features"
        "rc_mod_data_obj_meta"
        "rc_switch_user"
        "replica"
        "replica_open_and_close"
        "replica_truncate"
        "resource_administration"
        "ticket_administration"
        "user_administration"
        "zone_administration"
        "zone_report"
    )
    
    # 循环遍历数组并执行sed命令
    cp unit_tests/CTestTestfile.cmake unit_tests/CTestTestfile.cmake.bak
    for pattern in "${patterns_to_delete[@]}"; do
        sed -i "/${pattern}\"/{N;d;}" unit_tests/CTestTestfile.cmake
    done
    ret=$?
    cd $OLDPWD
    return $ret
}

cleanbuild() {
    rm -rf ${PWD}/$builddir /opt/irods-externals
}
