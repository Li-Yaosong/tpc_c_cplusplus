+#include "WCDBCpp.h"
+#include "gtest/gtest.h"
+#include <cassert>
+#include <cstdio>
+#include <string>
+#include <vector>
+
+using namespace WCDB;
+using namespace std;
+
+class TestData {
+public:
+    TestData() : id(0) {}
+    TestData(int id, const std::string &name) : id(id), name(name) {}
+
+    int id;
+    std::string name;
+
+    WCDB_CPP_ORM_DECLARATION(TestData)
+};
+
+WCDB_CPP_ORM_IMPLEMENTATION_BEGIN(TestData)
+WCDB_CPP_SYNTHESIZE(id)
+WCDB_CPP_SYNTHESIZE(name)
+WCDB_CPP_ORM_IMPLEMENTATION_END;
+
+TEST(WCDBTestSuite, BasicOperations)
+{
+    std::remove("/data/local/tmp/test.db");
+
+    WCDB::Database db("/data/local/tmp/test.db");
+
+    bool created = db.createTable<TestData>("test_table");
+    ASSERT_TRUE(created) << "Failed to create table 'test_table': "
+                         << db.getError().getMessage();
+
+    TestData data1(1, "Alice");
+    TestData data2(2, "Bob");
+    TestData data3(3, "Charlie");
+
+    bool inserted1 = db.insertObject(data1, "test_table");
+    ASSERT_TRUE(inserted1) << "Failed to insert data1: " << db.getError().getMessage();
+
+    bool inserted2 = db.insertObject(data2, "test_table");
+    ASSERT_TRUE(inserted2) << "Failed to insert data2: " << db.getError().getMessage();
+
+    bool inserted3 = db.insertObject(data3, "test_table");
+    ASSERT_TRUE(inserted3) << "Failed to insert data3: " << db.getError().getMessage();
+
+    WCDB::OptionalValueArray<TestData> allResults = db.getAllObjects<TestData>("test_table");
+    ASSERT_TRUE(allResults.succeed())
+    << "Failed to get all objects: " << db.getError().getMessage();
+    ASSERT_EQ(allResults.value().size(), 3) << "Should get 3 objects.";
+
+    TestData updateObject;
+    updateObject.name = "Bobby";
+    bool updated = db.updateObject(updateObject,
+                                   WCDB_FIELD(TestData::name),
+                                   "test_table",
+                                   WCDB_FIELD(TestData::id) == 2 
+    );
+    ASSERT_TRUE(updated) << "Failed to update object: " << db.getError().getMessage();
+
+    bool deleted = db.deleteObjects("test_table", WCDB_FIELD(TestData::id) == 3);
+    ASSERT_TRUE(deleted) << "Failed to delete object: " << db.getError().getMessage();
+
+    allResults = db.getAllObjects<TestData>("test_table");
+    ASSERT_TRUE(allResults.succeed())
+    << "Failed to get all objects after deletion: " << db.getError().getMessage();
+    ASSERT_EQ(allResults.value().size(), 2) << "Should get 2 objects after deletion.";
+
+    std::cout << "All basic operations tests passed successfully!" << std::endl;
+}
