source HPKBUILD > /dev/null 2>&1

logfile=${LYCIUM_THIRDPARTY_ROOT}/${pkgname}/${pkgname}_${ARCH}_${OHOS_SDK_VER}_test.log
checkprepare(){
    return 0
}
openharmonycheck() {
    res=0
    cd $pkgname-$ARCH-build
    {
        echo "Running available tests..."
        for test in tests/*.test; do
            [ -x "$test" ] || continue
            # 把需要python的用例排除
            [ "$test" = "tests/windows-installer.test" ] && continue
            echo "  TEST      $test"
            if ESPEAK_DATA_PATH=$(pwd) "$test"; then
                echo "  PASSED    $test"
            else
                echo "  FAILED    $test"
                res=1
            fi
        done
    } > ${logfile} 2>&1
    res=$?
    cd $OLDPWD
    return $res
}