source HPKBUILD > /dev/null 2>&1
logfile=${LYCIUM_THIRDPARTY_ROOT}/${pkgname}/${pkgname}_${ARCH}_${OHOS_SDK_VER}_test.log
openharmonycheck() {
    res=0
    cd $pkgname-$ARCH-build
    export LD_LIBRARY_PATH=/data/python3.8.10/lib:$LD_LIBRARY_PATH
    sed -i "s#/usr/bin/env python#/data/python3.8.10/bin/python#g" test_jbig2dec.py
    make check-TESTS > ${logfile} 2>&1
    res=$?
    if [ $res -ne 0 ]
    then
        mkdir -p ${LYCIUM_FAULT_PATH}/${pkgname}
        cp test-suite.log ${LYCIUM_FAULT_PATH}/${pkgname}/
    fi
    cd $OLDPWD

    return $res
}
