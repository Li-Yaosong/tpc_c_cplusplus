pkgname=rime
pkgver=1.13.0
pkgrel=0
archs=("armeabi-v7a" "arm64-v8a")
license=("BSD-3-Clause license")
depends=("leveldb" "glog" "yaml-cpp-0.6.0" "marisa-trie" "boost" "googletest" "OpenCC")
makedepends=()
source="https://github.com/rime/lib${pkgname}/archive/refs/tags/${pkgver}.tar.gz"
autounpack=true
downloadpackage=true
buildtools="make"
builddir=lib$pkgname-${pkgver}
packagename=${pkgver}.tar.gz
source envset.sh
host=

prepare() {
    mkdir -p $builddir/$ARCH-build
    if [ $ARCH == "armeabi-v7a" ]
    then
        setarm32ENV
        host=arm-linux
    elif [ $ARCH == "arm64-v8a" ]
    then
        setarm64ENV
        host=aarch64-linux
    else
        echo "${ARCH} not support"
        return -1
    fi
}

build() {
    cd $builddir
	${OHOS_SDK}/native/build-tools/cmake/bin/cmake "$@" -S./ -B${ARCH}-build -DOHOS_ARCH=${ARCH} \
        -DBoost_NO_BOOST_CMAKE=TRUE \
        -DBOOST_ROOT="${LYCIUM_ROOT}/usr/boost/${ARCH}" \
        -DCMAKE_PREFIX_PATH="${LYCIUM_ROOT}/usr/glog/${ARCH};${LYCIUM_ROOT}/usr/googletest/${ARCH};${LYCIUM_ROOT}/usr/yaml-cpp/${ARCH};${LYCIUM_ROOT}/usr/leveldb/${ARCH};${LYCIUM_ROOT}/usr/marisa-trie/${ARCH};${LYCIUM_ROOT}/usr/OpenCC/${ARCH};${LYCIUM_ROOT}/usr/gflags/${ARCH}" \
        -DCMAKE_INSTALL_PREFIX=${PWD}/../../../lycium/usr/$pkgname/$ARCH \
        -DCMAKE_BUILD_TYPE=Release \
        -DBUILD_MERGED_PLUGINS=OFF \
        -DENABLE_EXTERNAL_PLUGINS=ON > $buildlog 2>&1

	${OHOS_SDK}/native/build-tools/cmake/bin/cmake --build ${ARCH}-build >> $buildlog 2>&1
    cd $OLDPWD
    return $ret
}

package() {
    cd $builddir
    ${OHOS_SDK}/native/build-tools/cmake/bin/cmake --build ${ARCH}-build --target install >> $buildlog 2>&1
    cd $OLDPWD
    return $ret
}

check() {
    cd $builddir/$ARCH-build
    cd $OLDPWD
}

recoverpkgbuildenv(){
    unset host
    if [ $ARCH == "armeabi-v7a" ]
    then
        unsetarm32ENV
    elif [ $ARCH == "arm64-v8a" ]
    then
        unsetarm64ENV
    else
        echo "${ARCH} not support"
	return -1
    fi
}

# 清理环境
cleanbuild(){
    rm -rf ${PWD}/$builddir #${PWD}/$packagename
    return $ret
}
