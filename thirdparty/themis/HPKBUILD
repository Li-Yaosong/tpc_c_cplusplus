# This is an example HPKBUILD file. Use this as a start to creating your own,
# and remove these comments.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Contributor: Your Name <youremail@domain.com>
# Maintainer: Your Name <youremail@domain.com>

pkgname=themis
pkgver=0.15.5
pkgrel=0
pkgdesc="Themis is a cross-platform high-level cryptographic library for mobile, web, and server platforms."
url="https://github.com/cossacklabs/themis"
archs=("armeabi-v7a" "arm64-v8a" "x86_64")
license=("Apache License 2.0")
depends=("openssl")
makedepends=()
source="https://github.com/cossacklabs/themis/archive/refs/tags/$pkgver.tar.gz"

downloadpackage=true
autounpack=true
buildtools=cmake

builddir=$pkgname-${pkgver}
packagename=$builddir.tar.gz

source envset.sh
host=

prepare() {
    cp -rf $builddir  $builddir-$ARCH-build
    cd $builddir-$ARCH-build
    patch -p1 < ../themis_0.15.5_oh_pkg.patch >> $buildlog 2>&1
    cd $OLDPWD
    if [ $ARCH == "armeabi-v7a" ]
    then
        setarm32ENV
        host=arm-linux

    fi
    if [ $ARCH == "arm64-v8a" ]
    then
        setarm64ENV
        host=aarch64-linux
    fi
    if [ $ARCH == "x86_64" ]
    then
        setx86_64ENV
        host=x86_64-linux
    fi
    local openssl_root="${LYCIUM_ROOT}/usr/openssl/${ARCH}"
    export CFLAGS="$CFLAGS -I$openssl_root/include"
    export CXXFLAGS="$CXXFLAGS -I$openssl_root/include"
    export LDFLAGS="$LDFLAGS -L$openssl_root/lib"
}

build() {
    cd $builddir-$ARCH-build
    ${OHOS_SDK}/native/build-tools/cmake/bin/cmake "$@" \
        -DOHOS_ARCH=$ARCH \
        -B$ARCH-build \
        -S./ \
        -DCMAKE_FIND_ROOT_PATH="$LYCIUM_ROOT/usr/openssl/$ARCH" \
        -DCMAKE_C_FLAGS="$CFLAGS" \
        -DCMAKE_CXX_FLAGS="$CXXFLAGS" \
        -DCMAKE_EXE_LINKER_FLAGS="$LDFLAGS -lcrypto" \
        -DCMAKE_SHARED_LINKER_FLAGS="$LDFLAGS -lcrypto" \
        -L
    make -j4 -C $ARCH-build >> $buildlog 2>&1
    ret=$?
    cd $OLDPWD
    return $ret
}

package() {
    cd $builddir-$ARCH-build
    make install PREFIX=$LYCIUM_ROOT/usr/$pkgname/$ARCH >> $buildlog 2>&1
    cd $OLDPWD
}

check() {
    if [ $ARCH == "armeabi-v7a" ]
    then
        unsetarm32ENV
    fi
    if [ $ARCH == "arm64-v8a" ]
    then
        unsetarm64ENV
    fi
    if [ $ARCH == "x86_64" ]
    then
        unsetx86_64ENV
    fi
    echo "The test must be on an OpenHarmony device!"
}

cleanbuild() {
    rm -rf ${PWD}/$builddir ${PWD}/$builddir-arm64-v8a-build ${PWD}/$builddir-armeabi-v7a-build ${PWD}/$builddir-x86_64-build #${PWD}/$packagename
}