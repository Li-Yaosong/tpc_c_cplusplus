pkgname=unicorn
pkgver=2.1.4
pkgrel=0
pkgdesc=""
url="https://github.com/unicorn-engine/unicorn"
archs=("arm64-v8a" "x86_64")
license=()
depends=()
makedepends=()

source="https://github.com/unicorn-engine/unicorn/archive/refs/tags/2.1.4.tar.gz"

autounpack=true
downloadpackage=true
buildtools="cmake"

builddir=$pkgname-$pkgver
packagename=$builddir.tar.gz
patch_flag=true
build_dir=build

prepare() {
    if [ "$patch_flag" == true ]
    then
        cd $builddir
        patch -p1 < ../unicorn_2.1.4_pkg.patch > $buildlog 2>&1
        cd $OLDPWD
        patch_flag=false
    fi
    cd $builddir
    cd ${OLDPWD}
}

build() {
    cd $builddir
    ${OHOS_SDK}/native/build-tools/cmake/bin/cmake "$@" -DOHOS_ARCH=$ARCH -B$ARCH-build -S./ -L
    mkdir $build_dir
    cd $build_dir
    cmake ..
    make
    cd $OLDPWD
}

package() {
    cd $builddir
    make -C $ARCH-build install
    cd $OLDPWD
}

check() {
     echo "The test must be on an OpenHarmony device!"
}

cleanbuild() {
    echo "The test must be on an OpenHarmony device!"
    rm -rf ${PWD}/$builddir
}
