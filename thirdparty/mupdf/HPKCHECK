source HPKBUILD > /dev/null 2>&1
logfile=${LYCIUM_THIRDPARTY_ROOT}/${pkgname}/${pkgname}_${ARCH}_${OHOS_SDK_VER}_test.log


openharmonycheck() {
    res=0
	
	cd ${LYCIUM_ROOT}/usr/mupdf/${ARCH}/bin
	chmod +x storytest
	./storytest
	if [! -e "out.pdf" ]; then
        res=-1
		return $res
    fi
	
	chmod +x example
	./example out.pdf 2
	res=$?
	if [$res -ne 0]; then
	    return $res
	fi

    chmod +x multi-threaded
    ./multi-threaded out.pdf
    res=$?
	if [! -e "out0002.png" ]; then
        res=-1
		return $res
    fi
	
    chmod +x mutool
	./mutool show out.pdf > ${logfile} 2>&1
	grep -q "Size" ${logfile}
	res=$?
    if [$res -ne 0]; then
	    return $res
	fi
	cd $OLDPWD
    return $res
}