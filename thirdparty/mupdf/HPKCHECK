source HPKBUILD > /dev/null 2>&1
mupdfresult=${LYCIUM_ROOT}/result/${pkgname}
mkdir -p ${mupdfresult}
echo "${mupdfresult}"

openharmonycheck() {
    res=0
    chmod 777 ${LYCIUM_ROOT}/usr/mupdf/${ARCH}/bin/mutool
	${LYCIUM_ROOT}/usr/mupdf/${ARCH}/bin/mutool > ${mupdfresult}/mupdf.txt 2>&1
    
    grep -q "show internal PDF objects" ${mupdfresult}/mupdf.txt
    res=$?
    return $res
}