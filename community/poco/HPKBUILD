pkgname=poco
pkgver=poco-1.11.1-release
pkgrel=0
pkgdesc="The POCO C++ Libraries are powerful cross-platform C++ libraries for building network- and internet-based applications that run on desktop, server, mobile, IoT, and embedded systems."
url="https://pocoproject.org/"
archs=("armeabi-v7a" "arm64-v8a") # armeabi-v7a 需要开启 -mfloat-abi=softfp 编译OK
license=("Boost Software License")
depends=("openssl")
makedepends=("cmake")

source="https://github.com/pocoproject/$pkgname.git"

autounpack=false
downloadpackage=false
buildtools="cmake"
patchflag=false

builddir=$pkgname
packagename=$builddir.tar.gz

clonesrcflag=true

prepare() {
    if $clonesrcflag
    then
        git clone -b $pkgver $source > $publicbuildlog 2>&1
        if [ $? != 0 ]
        then 
            return -1
        fi
        # 鸿蒙的共享内存机制不同，关闭共享内存模块的编译
        pushd poco
        patch -p1 < ../0001-SharedMemory.patch
        popd
        
        clonesrcflag=false
    fi
    
    # 依赖库加入 pkg_config_path 路径
    for depend in ${depends[@]}
    do
        dependpath=$LYCIUM_ROOT/usr/$depend/$ARCH/lib/pkgconfig
        if [ ! -d ${dependpath} ]
        then
            continue
        fi
        pkgconfigpath=$pkgconfigpath"${dependpath}:"
    done
    pkgconfigpath=${pkgconfigpath%:*}

    mkdir -p $builddir/$ARCH-build
}

build() {
    cd $builddir
    export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:$pkgconfigpath
    ${OHOS_SDK}/native/build-tools/cmake/bin/cmake "$@" -DOHOS_ARCH=$ARCH -B$ARCH-build \
    -DCMAKE_CXX_FLAGS="-I$LYCIUM_ROOT/usr/openssl/$ARCH/include" \
    -DCMAKE_EXE_LINKER_FLAGS="-L$LYCIUM_ROOT/usr/openssl/$ARCH/lib" \
    -DBUILD_TESTS=ON \
    -D__OHOS__=true \
    -S./ -L >  $buildlog 2>&1
    $MAKE VERBOSE=1 -C $ARCH-build >> $buildlog 2>&1
    ret=$?
    cd $OLDPWD
    return $ret
}

# 打包安装
package() {
    cd $builddir
    make -C $ARCH-build install >>  $buildlog 2>&1
    cd $OLDPWD
}

# 进行测试的准备和说明
check() {
    echo "The test must be on an OpenHarmony device!"
}

# 清理环境
cleanbuild() {
    rm -rf ${PWD}/$builddir #${PWD}/$packagename
}
