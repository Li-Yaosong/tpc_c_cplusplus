pkgname=sc
pkgver=1.0.4
pkgrel=0
pkgdesc="sc is a portable C library collection with high performance and low memory overhead. It provides independent data structures and common function modules in the form of header file/source file pairs, and supports cross-platform integration directly."
url="https://github.com/tezc/sc"
archs=("armeabi-v7a" "arm64-v8a")
license=("BSD-3-Clause license")
depends=()
makedepends=()
source="https://github.com/tezc/$pkgname/archive/refs/tags/v$pkgver.zip"

downloadpackage=true
autounpack=true
buildtools=cmake
patchflag=true
builddir=${pkgname}-${pkgver}
packagename=${builddir}.zip

# 为编译设置环境，如设置环境变量，创建编译目录等
prepare() {
    if $patchflag
    then
        cd $builddir
        # pthread_join是OpenHarmony不支持的api
        # 解决/tmp无权限问题
        # 添加install指令
        patch -p1 < $PKGBUILD_ROOT/sc_1.0.4_oh_pkg.patch
        # patch只需要打一次,关闭打patch
        patchflag=false
        cd $OLDPWD
    fi

    mkdir -p $builddir/$ARCH-build
}

build() {
    cd $builddir
    ${OHOS_SDK}/native/build-tools/cmake/bin/cmake "$@" -DCMAKE_C_FLAGS="-Wno-unused-command-line-argument" \
        -DCMAKE_CXX_FLAGS="-Wno-unused-command-line-argument" -B$ARCH-build -S./ > $buildlog 2>&1
    $MAKE VERBOSE=1 -C $ARCH-build >> $buildlog 2>&1
    ret=$?
    cd $OLDPWD
    return $ret
}

package() {
    cd $builddir
    $MAKE -C $ARCH-build install >> $buildlog 2>&1
    cd $OLDPWD
}


check() {
    echo "The test must be on an OpenHarmony device!"
}


cleanbuild() {
    rm -rf ${PWD}/$builddir
}
